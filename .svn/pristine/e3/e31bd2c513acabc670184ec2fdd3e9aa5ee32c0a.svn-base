"use strict";

function createProfessorSector(label1, label2) {
    var h11 = document.createElement("h1");
    var h12 = document.createElement("h1");
    var h3 = document.createElement("h3");
    var h4 = document.createElement("h4");
    var div = document.createElement("div");

    h11.innerHTML = "&nbsp;"
    h12.innerHTML = "&nbsp;"
    h3.innerHTML = label1;
    h4.innerHTML = label2;

    div.classList.add("sector");
    div.appendChild(h11);
    div.appendChild(h3);
    div.appendChild(h4);
    div.appendChild(h12);

    return div;
}

function createAdminSector(label1, label2) {
    var div = createProfessorSector(label1, label2);

    var ipencil = document.createElement("i");
    ipencil.classList.add("fas");
    ipencil.classList.add("fa-pencil-alt");
    var itrash = document.createElement("i");
    itrash.classList.add("far");
    itrash.classList.add("fa-trash-alt");

    var span = document.createElement("span");
    span.classList.add("editDeleteSector");

    span.appendChild(ipencil);
    span.appendChild(itrash);

    div.appendChild(span);

    return div;
}

function createAddSector() {
    var className = "addSector";

    var h11 = document.createElement("h1");
    h11.classList.add(className);
    var h12 = document.createElement("h1");
    h12.classList.add(className);
    var h31 = document.createElement("h3");
    h31.classList.add(className);
    var h32 = document.createElement("h3");
    h32.classList.add(className);
    var div = document.createElement("div");

    h11.innerHTML = "&nbsp;"
    h12.innerHTML = "&nbsp;"
    h31.innerHTML = "Ajouter une";
    h32.innerHTML = "formation";

    div.classList.add("sector");
    div.appendChild(h11);
    div.appendChild(h31);
    div.appendChild(h32);
    div.appendChild(h12);
    div.id = className;

    return div;
}

function createAddSectorForm() {
    var className = "addSectorForm";

    var okImg = document.createElement("img");
    okImg.classList.add(className);
    okImg.classList.add("confirmSectorForm");
    okImg.setAttribute("src", "src/ok.svg");
    okImg.id = "confirmSectorForm";
    var crossImg = document.createElement("img");
    crossImg.classList.add(className);
    crossImg.classList.add("cancelSectorForm");
    crossImg.setAttribute("src", "src/cross.svg");
    crossImg.id = "cancelSectorForm";
    
    var h4 = document.createElement("h4");
    h4.classList.add(className);
    h4.innerHTML = "Ajouter une formation";
    var inputCode = document.createElement("input");
    inputCode.classList.add(className);
    inputCode.setAttribute("type", "text");
    inputCode.setAttribute("name", "codeSector");
    inputCode.setAttribute("placeholder", "Code formation");
    var inputName = document.createElement("input");
    inputName.classList.add(className);
    inputName.setAttribute("type", "text");
    inputName.setAttribute("name", "codeSector");
    inputName.setAttribute("placeholder", "Nom complet");
    var divCOrC = document.createElement("div");
    divCOrC.classList.add(className);
    divCOrC.classList.add("confirmOrCancel");

    var div = document.createElement("div");
    div.id = "addSectorForm";
    div.classList.add("sector");
    div.classList.add("addSectorForm");


    divCOrC.appendChild(okImg);
    divCOrC.appendChild(crossImg);

    div.appendChild(h4);
    div.appendChild(inputCode);
    div.appendChild(inputName);
    div.appendChild(divCOrC);

    return div;
}

