"use strict";

function createProfessorSector(id, label1, label2) {
    var p = document.createElement("p");
    p.setAttribute("style", "display: none;");
    p.id = "getSectorId";
    var h11 = document.createElement("h1");
    var h12 = document.createElement("h1");
    var h3 = document.createElement("h3");
    var h4 = document.createElement("h4");
    var div = document.createElement("div");

    p.innerHTML = id;
    h11.innerHTML = "&nbsp;"
    h12.innerHTML = "&nbsp;"
    h3.innerHTML = label1;
    h4.innerHTML = label2;

    div.classList.add("sector");
    div.appendChild(p);
    div.appendChild(h11);
    div.appendChild(h3);
    div.appendChild(h4);
    div.appendChild(h12);

    return div;
}

function createAdminSector(id, label1, label2) {
    var div = createProfessorSector(id, label1, label2);

    var ipencil = document.createElement("i");
    ipencil.classList.add("fas");
    ipencil.classList.add("fa-pencil-alt");
    var itrash = document.createElement("i");
    itrash.classList.add("far");
    itrash.classList.add("fa-trash-alt");
    itrash.classList.add("sectorTrash");

    var span = document.createElement("span");
    span.classList.add("editDelete");

    span.appendChild(ipencil);
    span.appendChild(itrash);

    div.appendChild(span);

    return div;
}
